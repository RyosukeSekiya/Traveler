<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
      <%- end -%> 
      <br>
      <div class="text-center"><h2>ログイン</h2></div>
      
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email,class: 'form-control', autofocus: true, autocomplete: "email" %>
      </div>
    
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password,class: 'form-control', autocomplete: "current-password" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    
      <div class="actions">
        <%= f.submit "送信" , class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>
