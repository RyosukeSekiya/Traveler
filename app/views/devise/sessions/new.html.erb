<body class="background">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
        <div class="text-center login"><h2>LOG IN</h2></div>
        
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email,class: 'form-control', autofocus: true, autocomplete: "email" %>
        </div>
      
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password,class: 'form-control', autocomplete: "current-password" %>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      
        <div class="actions">
          <%= f.submit "送信" , class: 'btn-primary btn-block' %>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %>
      <p>test login</p>
      <p>email: test888@email.com</p>
      <p>password: testtest</p>
    </div>
  </div>
</body>