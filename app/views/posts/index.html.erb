<div class="row">
  <div class="col-sm-6 offset-sm-4">
    
    <div class="post">
      <h2>ALL POSTS</h2>
    </div>
    
    <% if user_signed_in? %> 
     <div class="row">
       <div class="col-sm-8">
         <ul class="list-unstyled">
           
          <% @posts.each do |post| %>
            <li class="media mb-3">
              <div class="media-body">
                <div>
                  <%= link_to post.user.name, mypage_path(post.user) %> <span class="text-muted">posted at <%= datetime(post.created_at) %></span>
                </div>
                 <div>
                  <p class="mb-2"><%= image_tag(post.image.url) %></p>
                </div>
                <div>
                  <p class="mb-2"><%= post.body %></p>
                </div>
                <div >
                  <% if current_user == post.user %>
                    <%= link_to "削除", post, method: :delete, data: { confirm: "削除してもよろしいですか?" }, class: 'btn btn-danger btn-sm' %>
                    <%= link_to '編集', edit_post_path(post),class: 'btn btn-danger btn-sm' %>
                  <% end %>
                  <%= render 'likes/like_button', post: post %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
       </div>
     </div>
    <% end %>
    
  </div>
</div>
