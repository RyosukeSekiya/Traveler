<div class="post"><h2>SHOW</h2></div>
<div class="row">
  <aside class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <div class="text-center">
        <% if @post.image? %> 
          <p>
            <%= image_tag @post.image.url %>
          </p>
        <% end %>
        </div>
      </div>
    </div>
  
  <%= link_to :back do %>
    <button>戻る</button>
  <% end %>
  <%= link_to root_path  do %>
    <button>トップページへ</button>
  <% end %>
</div>




  

  

