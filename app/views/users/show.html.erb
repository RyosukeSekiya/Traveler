<head>
  <%= link_to 'プロフィール編集', edit_user_registration_path %>
</head>

<body>
<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <div class="text-center">
        <% if @user.image? %>  <!-- アップロード画像がある場合に実行する -->
          <p>
            <%= image_tag @user.image.url %><!-- userインスタンスの画像ファイルのURLを取得し表示 -->
          </p>
        <% end %>
        </div>
      </div>
    </div>
  </aside>
  <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="<%= mypage_path(@user) %>" class="nav-link <%= 'active' if current_page?(mypage_path(@user)) %>">投稿 <span class="badge badge-secondary"><%= @count_posts %></span></a></li>
      <li class="nav-item"><a href="#" class="nav-link">お気に入り</a></li>
    </ul>
    <%= render 'posts/myposts' %>
  </div>
</div>

</body>